@model ProductApp.Models.Products

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row gx-5">
    <img alt="@Model.ProductName" src="@Model.ImageUrl" class="img-fluid col-5" />
    <div class="col-7">        
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <div class="addToCart">
            <p class="button">
                <a class="btn btn-secondary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart" asp-route-pieId="@Model.ProductId">
                    Add to Cart
                </a>
            </p>
        </div>
    </div>
</div>
